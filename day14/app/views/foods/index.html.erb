<h3>Food List</h3>
<%= link_to "Root", root_path %>
<%= link_to "New Food", new_food_path %>
<ul>
<% @foods.each do |food| %>
  <li>
    <%= food.name %>
    <%= food.description %>
    <%= link_to "Edit", edit_food_path(food) %>
    |
    <%= link_to "Delete", food_path(food), method: :delete %>
  </li>
<% end %>
</ul>